{
  "name": "typeorm-scoped",
  "version": "1.2.1",
  "license": "ISC",
  "description": "TypeORM extension that adds scopes and default scopes to entities and repositories, supporting both Active Record and Data Mapper patterns.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "nodemon -w 'src/**/*' --ignore 'src/**/*.spec.ts' -e ts -x 'npm run build'",
    "build": "rimraf dist && tsc",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/davmik2601/typeorm-scoped"
  },
  "homepage": "https://github.com/davmik2601/typeorm-scoped#readme",
  "bugs": {
    "url": "https://github.com/davmik2601/typeorm-scoped/issues"
  },
  "keywords": [
    "typeorm",
    "typeorm plugin",
    "typeorm scopes",
    "typeorm default scope",
    "active record typeorm",
    "data mapper typeorm",
    "nestjs",
    "typeorm-scoped",
    "entity scopes",
    "typeorm repository scope"
  ],
  "author": {
    "name": "David Mikayelyan",
    "email": "davmik2601@gmail.com"
  },
  "files": [
    "dist/**",
    "package.json",
    "README.md"
  ],
  "peerDependencies": {
    "typeorm": ">=0.2.0 <0.4.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "babel-jest": "^27.0.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.0",
    "core-js": "^3.4.8",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^27.0.0",
    "nodemon": "^2.0.1",
    "pg": "^8.0.0",
    "prettier": "^3.4.2",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ]
  }
}
